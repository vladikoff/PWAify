#!/usr/bin/env node

const meow = require('meow');
const cli = meow(`
    Usage
      $ pwaify <input>

    Options
      --platforms Platforms to build the app.
      --icon App Icon.
      --manifest Manifest.json url.

    Examples
      $ pwaify https://airhorner.com --platforms=darwin
`);

require('../index')({
  appUrl: cli.input[0],
  platforms: cli.flags.platforms || 'all',
  path: cli.flags.path || '.',
  icon: cli.flags.icon,
  manifestUrl: cli.flags.manifest
});
